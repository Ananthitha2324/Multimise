num = int(input("enter the number:"))
sum_of_digits = 0
len_of_digits = len(str(num))
temp = num
while temp>0:
    digits = temp%10
    print(digits)
    sum_of_digits = sum_of_digits + digits**len_of_digits
    print(sum_of_digits)
    temp = temp//10
    print(temp)
if sum_of_digits == num:
    print("the given numbers is an Armstrong number")
else:
    print("the given number is not an Armstrong number")
    
